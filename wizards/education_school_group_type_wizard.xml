<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="education_school_group_type_wizard_form" model="ir.ui.view">
	    <field name="name">education.school.group.type.wizard.form</field>
	    <field name="model">education.school.group.type.wizard</field>
	    <field name="arch" type="xml">
	        <form string="Change group type of the school">
	            <group>
	                <field name="school_id"></field>
	                <field name="group_type"></field>
	            </group>
	            <footer>
	                <button name="action_confirm" string="Confirm" type="object" class="oe_highlight"/>
	                <button special="cancel" string="Cancel"/>
	            </footer>
	        </form>
	    </field>
	</record>
	
	<record id="education_school_group_type_wizard_action" model="ir.actions.act_window">
	    <field name="name">Change Group type</field>
	    <field name="res_model">education.school.group.type.wizard</field>
	    <field name="view_mode">form</field>
	    <!-- <field name="binding_model_id" ref="model_education_student"></field> -->
	    <field name="target">new</field>
	</record>
	
</odoo>


